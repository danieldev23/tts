{
    "name": "tts-desktop",
    "version": "1.0.0",
    "description": "Desktop Text-to-Speech App với Google Gemini TTS - Hỗ trợ giọng vùng miền Việt Nam",
    "author": {
        "name": "HuyDQ",
        "url": "https://github.com/danieldev23"
    },
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "https://github.com/danieldev23/tts"
    },
    "keywords": [
        "tts",
        "text-to-speech",
        "gemini",
        "vietnamese",
        "electron",
        "desktop"
    ],
    "main": "dist-electron/main.js",
    "scripts": {
        "dev": "vite",
        "build": "vite build && electron-builder",
        "preview": "vite preview",
        "electron:dev": "concurrently \"vite\" \"wait-on http://localhost:5173 && electron .\"",
        "electron:build": "npm run build"
    },
    "dependencies": {
        "@google/genai": "^0.7.0",
        "dotenv": "^16.3.1",
        "element-plus": "^2.4.4",
        "lucide-vue-next": "^0.294.0",
        "mime": "^4.1.0",
        "vue": "^3.3.13"
    },
    "devDependencies": {
        "@types/mime": "^3.0.4",
        "@types/node": "^20.10.4",
        "@vitejs/plugin-vue": "^4.5.2",
        "autoprefixer": "^10.4.16",
        "concurrently": "^8.2.2",
        "electron": "^28.0.0",
        "electron-builder": "^24.9.1",
        "postcss": "^8.4.32",
        "tailwindcss": "^3.3.6",
        "typescript": "^5.3.3",
        "vite": "^5.0.8",
        "vite-plugin-electron": "^0.15.5",
        "vite-plugin-electron-renderer": "^0.14.5",
        "vue-tsc": "^1.8.25",
        "wait-on": "^7.2.0"
    },
    "build": {
        "appId": "com.huydq.tts-desktop",
        "productName": "TTS Desktop",
        "copyright": "Copyright © 2024 HuyDQ",
        "directories": {
            "output": "release"
        },
        "files": [
            "dist/**/*",
            "dist-electron/**/*"
        ],
        "mac": {
            "target": "dmg",
            "icon": "public/icon.icns"
        },
        "win": {
            "target": "nsis",
            "icon": "public/icon.ico"
        },
        "linux": {
            "target": "AppImage"
        }
    }
}